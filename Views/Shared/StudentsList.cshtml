<!doctype html>
<html lang="en">
<head>
    <title>Sidebar 09</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700,800,900" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/addstudent.css">
    <link rel="stylesheet" href="~/css/studentprofile.css">
    <link rel="stylesheet" href="~/css/studentslist.css">
</head>
<body>
    <div class="wrapper d-flex align-items-stretch">
        <nav id="sidebar">
            <div class="custom-menu">
                <button type="button" id="sidebarCollapse" class="btn btn-primary">
                </button>
            </div>
            <div class="img bg-wrap text-center py-4" style="background-color: #495057">
                <div class="user-logo">
                    <h3 class="name-title">Admin</h3>
                </div>
            </div>
            <ul class="list-unstyled components mb-5">
                <li class="active">
                    <a href="#"><span class="fa fa-home mr-3"></span> Add Student</a>
                </li>
                <li>
                    <a href="#"><span class="fa fa-home mr-3"></span> View Students</a>
                </li>
                <li>
                    <a href="#"><span class="fa fa-trophy mr-3"></span> Dashboard</a>
                </li>

                <li>
                    <a href="#"><span class="fa fa-sign-out mr-3"></span> Log Out</a>
                </li>
            </ul>

        </nav>

        <!-- Page Content  -->
        <div id="content" class="p-4 p-md-5 pt-5">
            <div class="table-container">
                <div class="form-group">
                    <div class="paging">
                        <select class="form-group" class="page" name="page">
                            <option value="5">5</option>
                            <option value="10">10</option>
                            <option value="25">25</option>
                        </select>
                    </div>

                    <div class="pagination">
                        <button class="btn">&#171;</button>
                        <button class="btn">&#8249;</button>
                        <span id="pageInfo"></span>
                        <button class="btn">&#8250;</button>
                        <button class="btn">&#187;</button>
                    </div>
                </div>

                <div class="table">
                    <div class="table-wrap">
                        <div class="table-responsive">
                        <table class="points">
                        <thead>
                            <tr>
                                <th data-sort="asc"><span class="sort-indicator asc"></span>ID<span class="sort-indicator"></span></th>
                                <th data-sort="asc"><span class="sort-indicator asc"></span>Name<span class="sort-indicator"></span></th>
                                <th data-sort="asc"><span class="sort-indicator asc"></span>Roll NO<span class="sort-indicator"></span></th>
                                <th data-sort="asc"><span class="sort-indicator asc"></span>Department<span class="sort-indicator"></span></th>
                                <th data-sort="asc"><span class="sort-indicator asc"></span>Degree<span class="sort-indicator"></span></th>
                                <th data-sort="asc"><span class="sort-indicator asc"></span>DOB<span class="sort-indicator"></span></th>
                                <th data-sort="asc"><span class="sort-indicator asc"></span>City<span class="sort-indicator"></span></th>
                                <th data-sort="asc"><span class="sort-indicator asc"></span>Interests<span class="sort-indicator"></span></th>
                                <th>Actions</th>
                            </tr>

                        </thead>

                        <tbody>

                                    @foreach (var student in Model)
                                    {
                                        <tr>
                                            <!-- Populate table cells with student data -->
                                            <td>@student.Id</td>
                                            <td>@student.FullName</td>
                                            <td>@student.RollNo</td>
                                            <td>@student.Department</td>
                                            <td>@student.Degree</td>
                                            <td>@student.DateOfBirth.ToString("dd/MM/yyyy")</td>
                                            <td>@student.City</td>
                                            <td>@student.Interest</td>
                                            <td>
                                                Edit | View | Delete 
                                            </td>
                                        </tr>
                                    }



                        </tbody>
                    </table>
                    </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="js/jquery.min.js"></script>
    <script src="js/popper.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/main2.js"></script>
    <script>
        
        const currentPage = 1; // For example
        const totalPages = 12; // For example

        const pageInfo = document.getElementById('pageInfo');
        pageInfo.textContent = `Page ${currentPage} of ${totalPages}`;
    </script>

</body>
</html>