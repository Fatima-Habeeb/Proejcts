 @model PostMidProject.Students
<!doctype html>
<html lang="en">
<head>
    <title>Student Profile</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700,800,900" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/studentprofile.css">
    <link rel="stylesheet" href="~/css/addstudent.css">
    <link rel="stylesheet" href="~/css/studentslist.css">

</head>
<body>

    <div class="wrapper d-flex align-items-stretch">
        <nav id="sidebar">
            <div class="custom-menu">
            </div>
            <div class="img bg-wrap text-center py-4" style="background-color: #495057">
                <div class="user-logo">
                    <h3 class="name-title">Admin</h3>
                </div>
            </div>
            <ul class="list-unstyled components mb-5">
                <li class="active">
                    <a href="/Students/Index"><span class="fa fa-home mr-3"></span> View Students</a>
                </li>

                <li>
                    <a href="/Students/AddStudents"><span class="fa fa-home mr-3"></span> Add Student</a>
                </li>

                <li>
                    <a href="/Students/Dashboard"><span class="fa fa-trophy mr-3"></span> Dashboard</a>
                </li>
                <li>
                    <a href="/Login/Index"><span class="fa fa-sign-out mr-3"></span> Log Out</a>
                </li>
            </ul>

        </nav>
        <!-- Page Content  -->
        <div id="content" class="p-4 p-md-5 pt-5">
            <h2 style="text-align: center;">
                @Model.FullName
            </h2>

            <table class="student-data">
                <tbody>
                    @* <tr>
                        <td>Name</td>
                        <td>@Model.FullName</td>
                    </tr> *@
                    <tr>
                        <td>Roll No</td>
                        <td>@Model.RollNo</td>
                    </tr>
                    <tr>
                        <td>Email</td>
                        <td>@Model.Email</td>
                    </tr>

                    <tr>
                        <td>Gender</td>
                        <td>@Model.Gender</td>
                    </tr>
                    <tr>
                        <td>Date of Birth</td>
                        <td>@Model.DateOfBirth</td>
                    </tr>
                    <tr>
                        <td>City</td>
                        <td>@Model.City</td>
                    </tr>

                    <tr>
                        <td>Interest</td>
                        <td>@Model.Interest</td>
                    </tr>
                    <tr>
                        <td>Department</td>
                        <td>@Model.Department</td>
                    </tr>
                    <tr>
                        <td>Degree</td>
                        <td>@Model.Degree</td>
                    </tr>

                    <tr>
                        <td>Start Date</td>
                        <td>@Model.StartDate</td>
                    </tr>
                    <tr>
                        <td>End Date</td>
                        <td>@Model.EndDate</td>
                    </tr>

                </tbody>
            </table>
        </div>
    </div>
</body>
</html>